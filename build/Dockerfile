# Required for oauth-proxy
RUN dnf install -y python3-passlib python3-bcrypt
USER 1001

COPY watches.yaml ${HOME}/watches.yaml
COPY roles/ ${HOME}/roles/
COPY collections/ ${HOME}/.ansible/collections/
