apiVersion: apps/v1
kind: Deployment
metadata:
  name: snmp-webhook
spec:
  selector:
    matchLabels:
      app: snmp-webhook
  replicas: 1
  template:
    metadata:
      labels:
        app: snmp-webhook
    spec:
      containers:
        - name: prometheus-webhook-snmp
          image: 'quay.io/mrunge/prometheus-webhook-snmp:latest'
          ports:
            - containerPort: 9099
          env:
            - name: SNMP_COMMUNITY
              value: public
            - name: SNMP_RETRIES
              value: "1"
            - name: SNMP_HOST
              value: "{{ snmp_trap_host }}"
            - name: SNMP_PORT
              value: "162"
---
apiVersion: v1
kind: Service
metadata:
  name: prometheus-webhook-snmp
spec:
  selector:
    app: snmp-webhook
  ports:
    - protocol: TCP
      port: 9099
      targetPort: 9099
