apiVersion: integreatly.org/v1alpha1
kind: Grafana
metadata:
  name: {{ meta.name }}
  namespace: {{ meta.namespace }}
spec:
  ingress:
    enabled: {{ graphing_spec_ingress_enabled }}
  config:
    auth:
      disable_signout_menu: {{ graphing_spec_config_auth_disable_signout_menu }}
    auth.anonymous:
      enabled: true
    log:
      level: warn
      mode: console
    security:
      admin_password: {{ graphing_spec_config_security_admin_password }}
      admin_user: {{ graphing_spec_config_security_admin_user }}
  dashboardLabelSelector:
    - matchExpressions:
        - key: app
          operator: In
          values:
            - grafana
